    </bean>
    <bean id="projectDaoImp" class="org.encuestame.core.persistence.dao.ProjectDaoImp">
        <property name="hibernateTemplate">
            <ref bean="hibernateTemplate" />
        </property>
    </bean>
    <bean id="catStateDaoImp"  scope="singleton" class="org.encuestame.core.persistence.dao.CatStateDaoImp">
