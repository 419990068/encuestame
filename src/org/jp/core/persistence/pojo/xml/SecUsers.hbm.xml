<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.jp.core.persistence.pojo.SecUsers" table="sec_users" lazy="false">
        <id name="uid" type="java.lang.Integer">
            <column name="uid" />
            <generator class="identity" />
        </id>
        <many-to-one name="catState" class="org.jp.core.persistence.pojo.CatState" fetch="select">
            <column name="id_state" not-null="true" />
        </many-to-one>
        <property name="sex" type="string">
            <column name="sex" length="5" />
        </property>
        <property name="name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="100" not-null="true" unique="true" />
        </property>
        <property name="username" type="string">
            <column name="username" />
        </property>
        <property name="password" type="string">
            <column name="password" not-null="true" />
        </property>
        <property name="passwordClean" type="string">
            <column name="password_clean" />
        </property>
        <property name="birthDate" type="java.lang.Integer">
            <column name="birth_date" />
        </property>
        <property name="address" type="string">
            <column name="address" />
        </property>
        <property name="nocId" type="string">
            <column name="noc_id" length="16" />
        </property>
        <property name="status" type="boolean">
            <column name="status" not-null="true" />
        </property>
        <property name="inviteCode" type="string">
            <column name="invite_code" />
        </property>
        <property name="position" type="string">
            <column name="position" />
        </property>
        <property name="dateNew" type="timestamp">
            <column name="date_new" length="0" not-null="true" />
        </property>
        <property name="publisher" type="string">
            <column name="publisher" length="2" not-null="true" />
        </property>
        <set name="proyectUsers" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.ProyectUser" />
        </set>
        <set name="secGroupUsers" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.SecGroupUser" />
        </set>
        <set name="secUserPermissions" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.SecUserPermission" />
        </set>
        <set name="catLocationUsers" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.CatLocationUser" />
        </set>
        <set name="surveyResultMods" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.SurveyResultMod" />
        </set>
        <set name="questionColettions" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.QuestionColettion" />
        </set>
        <set name="surveyses" inverse="true">
            <key>
                <column name="uid" not-null="true" />
            </key>
            <one-to-many class="org.jp.core.persistence.pojo.Surveys" />
        </set>
    </class>
    
    <!-- HQL QUERIES -->
 
	 <query name="User.loadUserByUserName">
	 <![CDATA[
	        select u 
	        from org.jp.core.persistence.pojo.SecUsers as u 
	        where u.username = ?
			]]>
	 </query>
	 
	 <query name="User.loadPermissionUser">
	 <![CDATA[
	     select d from SecUserPermission d where d.secUsers = ? and d.state=1
			]]>
	 </query>
	 
	 <query name="User.loadUserByInviteCode">
			<![CDATA[
	        select u 
	        from SecUsers as u 
	        where u.inviteCode = ?
			]]>
		</query> 
		
		 <query name="User.loadGroupsUser">
			<![CDATA[
	       select d from SecGroupUser d where d.secUsers = ? and d.state=1	       
			]]>
		</query> 
		
		 <query name="User.loadGroupPermission">
			<![CDATA[
	       from SecGroupPermission d where d.secGroups = ? and d.state=1	       
			]]>
		</query> 
	
</hibernate-mapping>
