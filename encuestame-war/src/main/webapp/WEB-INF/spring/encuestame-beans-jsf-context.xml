<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


  <!-- Scans for application @Components to deploy -->
  <context:component-scan base-package="org.encuestame.web" />

  <bean id="frontEndBean" class="org.encuestame.web.beans.frontEnd.FrontEndBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <!-- User Information Bean -->
  <bean id="userProfile" class="org.encuestame.web.security.UserProfileBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <!-- Social Beans
  <bean id="twitterAccountBean" class="org.encuestame.web.social.TwitterAccountsBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
  </bean>
   -->

   <bean id="applicationStartup" class="org.encuestame.business.setup.ApplicationStartup"
         scope="singleton">
  </bean>


</beans>
