<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">


    <var name="twitterAccountBean" class="org.encuestame.web.social.TwitterAccountsBean" />

    <view-state id="social">
        <on-render>
            <evaluate
                expression="securityService.getUserLoggedTwitterAccount(currentUser.name)"
                result="flowScope.accounts" result-type="dataModel" />
        </on-render>
        <transition on="edit" to="editTwitterAccount">
            <set name="flowScope.twitterSelected" value="accounts.selectedRow" />
        </transition>
    </view-state>

    <view-state id="editTwitterAccount">
        <on-render>
            <evaluate expression="twitterAccountBean.setUnitTwitterAccountBean(accounts.selectedRow)" />
            <evaluate expression="twitterAccountBean.getTwitterPinUrl()" />
        </on-render>
    </view-state>

    <view-state id="succesfull">
        <transition on="confirm" to="succesfullEnd">
        </transition>
    </view-state>

    <end-state id="succesfullEnd" view="externalRedirect:contextRelative:/login.do"></end-state>

     <global-transitions>
        <transition on="cancel" to="social" />
        <transition on-exception="org.encuestame.core.exception.EnMeExpcetion"
            to="error" />
    </global-transitions>


</flow>
