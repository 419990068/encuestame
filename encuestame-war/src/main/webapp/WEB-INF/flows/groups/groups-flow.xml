<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="groupBean" class="org.encuestame.web.beans.admon.GroupBean" />

    <view-state id="groups">
        <on-render>
            <evaluate expression="groupBean.loadListGroups()" result="flowScope.groups"
                result-type="dataModel" />
        </on-render>
        <transition on="createGroup">

        </transition>
        <transition on="select" to="editGroup">
            <set name="flowScope.groupSelected" value="groups.selectedRow" />
        </transition>
        <transition on="create">
              <evaluate expression="securityService.createGroup(groupBean.newGroup)" result="flowScope.newGroup" />
              <render fragments="groupsForm" />
        </transition>
    </view-state>

    <view-state id="editGroup" view="editGroup.xhtml">
        <transition on="update" to="groups">
            <evaluate expression="securityService.updateGroup(flowScope.groupSelected)" result="flowScope.groupSelected" />
        </transition>
        <transition on="cancel" to="groups">
        </transition>
    </view-state>

    <end-state id="succesfullEnd" view="externalRedirect:contextRelative:/login.do"></end-state>

    <global-transitions>
        <transition on-exception="org.encuestame.core.exception.EnMeExpcetion"
            to="error" />
    </global-transitions>

</flow>
