<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <view-state id="tweetpoll">
        <on-render>
            <evaluate expression="tweetPollService.getTweetsPollsByUserName(currentUser.name)" result="flowScope.tweetsPolls"
                      result-type="dataModel" />
            <evaluate expression="tweetPollService.validateUserTwitterAccount(currentUser.name)" result="flowScope.validate"/>
        </on-render>
    </view-state>

    <end-state id="succesfullEnd" view="externalRedirect:contextRelative:/login.do"></end-state>

    <global-transitions>
        <transition on-exception="org.encuestame.core.exception.EnMeExpcetion"
            to="error" />
    </global-transitions>

</flow>
