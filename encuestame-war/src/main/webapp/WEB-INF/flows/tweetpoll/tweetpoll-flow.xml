<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="createTweetPollBean"
        class="org.encuestame.web.beans.survey.tweetpoll.CreateTweetPollBean" />

    <var name="tweetPollsBean"
        class="org.encuestame.web.beans.survey.tweetpoll.TweetPollsBean" />

      <on-start>
          <evaluate
              expression="tweetPollService.getTweetsPollsByUserName(currentUser.name)"
              result="flowScope.tweetsPolls" result-type="dataModel" />
          <evaluate
              expression="tweetPollService.validateUserTwitterAccount(currentUser.name)"
              result="flowScope.validate" />
      </on-start>

    <view-state id="tweetpoll">
        <transition on="create" to="addQuestion">

        </transition>
        <transition on="search">
            <evaluate
                expression="tweetPollService.searchTweetsPollsByKeyWord(currentUser.name, tweetPollsBean.searchKeyword)"
                result="flowScope.tweetsPolls" result-type="dataModel" />
            <render fragments="tableForm" />
        </transition>
    </view-state>

    <view-state id="addQuestion">
        <transition on="saveQuestion" to="addAnswers">
        </transition>
    </view-state>

    <view-state id="addAnswers">
        <transition on="back" to="addQuestion">
        </transition>
        <transition on="publish" to="publish">
        </transition>
        <transition on="later" to="succesfullEnd">
            <evaluate expression="createTweetPollBean.saveLaterTweetPoll()" />
        </transition>
    </view-state>

    <view-state id="publish">
         <on-render>
                <evaluate expression="createTweetPollBean.loadTwitterAccounts()" />
         </on-render>
         <transition on="back" to="addAnswers">
        </transition>
        <transition on="publish" to="succesfullEnd">
            <evaluate expression="createTweetPollBean.publishTweetPoll()" />
        </transition>
         <transition on="later" to="succesfullEnd">
            <evaluate expression="createTweetPollBean.saveLaterTweetPoll()" />
        </transition>
    </view-state>

    <end-state id="succesfullEnd"></end-state>

    <global-transitions>
        <transition on="cancel" to="succesfullEnd" />
        <transition on-exception="org.encuestame.core.exception.EnMeExpcetion"
            to="error" />
    </global-transitions>

</flow>
