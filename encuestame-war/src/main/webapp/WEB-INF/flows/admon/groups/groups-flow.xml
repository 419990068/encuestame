<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="groupBean" class="org.encuestame.web.beans.admon.GroupBean" />

    <view-state id="groups">
        <on-render>
             <evaluate expression="groupBean.loadListGroups()" result="viewScope.groups" result-type="dataModel" />
        </on-render>
        <transition on="saveGroup" >

        </transition>
    </view-state>

    <view-state id="succesfull">
        <transition on="confirm" to="succesfullEnd" >
        </transition>
    </view-state>

    <end-state id="succesfullEnd" view="externalRedirect:contextRelative:/login.do"></end-state>

</flow>
