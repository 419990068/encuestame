<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ENCUESTAME_USER"/>

    <var name="testJuan" class="org.encuestame.web.beans.JuanTestBean" />

    <view-state id="main">
        <on-render>
            <render fragments="bookingsFragment"/>
        </on-render>
        <transition on="paso1" to="reviewHotels">
             <evaluate expression="testJuan.copyProp()" />
             <render fragments="bookingsFragment"/>
        </transition>
        <transition on="paso2" >
             <evaluate expression="testJuan.copyProp2()" />
             <render fragments="bookingsFragment"/>
        </transition>
    </view-state>

    <view-state id="reviewHotels">
    </view-state>

    <end-state id="end" view="main2.xhtml"></end-state>

</flow>
