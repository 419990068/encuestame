        <mapping class="org.encuestame.core.persistence.domain.security.SecPermission"/>
        <mapping class="org.encuestame.core.persistence.domain.security.SecUser"/>
        <mapping class="org.encuestame.core.persistence.domain.security.SecUserSecondary"/>
        <mapping class="org.encuestame.core.persistence.domain.security.SecUserTwitterAccounts"/>
        <mapping class="org.encuestame.core.persistence.domain.survey.Poll"/>
        <mapping class="org.encuestame.core.persistence.domain.survey.PollResult"/>
