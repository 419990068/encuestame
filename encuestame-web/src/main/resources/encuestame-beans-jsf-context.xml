<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!-- Survey's -->

  <bean id="surveyFormatBean" class="org.encuestame.web.beans.survey.SurveyFormatBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="surveyControllerBean"
    class="org.encuestame.web.beans.survey.BuildSurveyControllerBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="buildEventSurvey" class="org.encuestame.web.utils.DropEventBean"
    scope="session">
    <property name="buildSurvey" ref="surveyControllerBean" />
  </bean>

  <!--  Tweet Poll -->

  <bean id="createTweetPollBean"
    class="org.encuestame.web.beans.survey.tweetpoll.CreateTweetPollBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
    <property name="countTweet">
      <value>140</value>
    </property>
  </bean>

  <bean id="tweetPolls"
    class="org.encuestame.web.beans.survey.tweetpoll.TweetPollsBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="tweetPollCredentialsBean"
    class="org.encuestame.web.beans.survey.tweetpoll.TweetPollCredentialsBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <!-- menu's bean -->
  <bean id="menuBean" class="org.encuestame.utils.web.MenuBean"
    scope="session">
  </bean>

  <!-- globals -->
  <bean id="globalBean" class="org.encuestame.web.beans.commons.GlobalCommonsBeans"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="calendarBean" class="org.encuestame.web.beans.commons.CalendarBean"
    scope="request">
  </bean>

  <bean id="reCaptcha" class="net.tanesha.recaptcha.ReCaptchaImpl">
    <property name="privateKey" value="my private key" />
    <property name="publicKey" value="my public key" />
    <property name="recaptchaServer" value="http://api.recaptcha.net" />
    <!--
      Or, if you want to use SSL, then use this: <property
      name="recaptchaServer" value="http://secure-api.recaptcha.net" />
    -->
    <property name="includeNoscript" value="false" />
  </bean>
</beans>
