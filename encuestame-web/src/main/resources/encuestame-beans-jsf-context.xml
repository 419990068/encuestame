<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


  <!-- Scans for application @Components to deploy -->
  <context:component-scan base-package="org.encuestame.web" />

  <!-- Location -->
    <bean id="locationBean" class="org.encuestame.web.beans.admon.location.LocationBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
    </bean>

  <!-- Survey's -->
  <bean id="surveyFormatBean" class="org.encuestame.web.beans.survey.SurveyFormatBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="surveyControllerBean"
    class="org.encuestame.web.beans.survey.BuildSurveyControllerBean"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="buildEventSurvey" class="org.encuestame.web.utils.DropEventBean"
    scope="session">
    <property name="buildSurvey" ref="surveyControllerBean" />
  </bean>

  <!-- menu's bean -->
  <bean id="menuBean" class="org.encuestame.utils.web.MenuBean"
    scope="session">
  </bean>

  <!-- globals -->
  <bean id="globalBean" class="org.encuestame.web.beans.commons.GlobalCommonsBeans"
    scope="session">
    <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <bean id="calendarBean" class="org.encuestame.web.beans.commons.CalendarBean"
    scope="request">
  </bean>

  <!-- User Information Bean -->
  <bean id="userProfile" class="org.encuestame.web.security.UserProfileBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
  </bean>

  <!-- Social Beans
  <bean id="twitterAccountBean" class="org.encuestame.web.social.TwitterAccountsBean" scope="session">
        <property name="servicemanagerBean" ref="servicesManager" />
  </bean>
   -->
</beans>
