   <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <constructor-arg ref="configurationEncryptor" />
        <property name="locations">
            <list>
                <value>classpath:encuestame-config-overwrite.properties</value>
                <value>classpath:hibernate.prod.properties</value>
                <value>classpath:lucene.index.properties</value>
                <value>classpath:email-config.properties</value>
            </list>
        </property>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>

     <bean id="log4jInitializer"
        class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod"
          value="org.springframework.util.Log4jConfigurer.initLogging" />
        <property name="arguments">
          <list>
            <value>classpath:log4j.properties</value>
          </list>
        </property>
      </bean>


</beans>
