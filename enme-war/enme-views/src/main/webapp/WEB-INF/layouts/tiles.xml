<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="page" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}page.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
        <put-attribute name="profile" value="/WEB-INF/jsp/includes/profile.jsp" />
    </definition>

    <!--
        The setup main layout
    -->

    <definition name="setup-page" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}setup-page.jsp">
        <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
    </definition>

    <!--
        The login main layout
    -->

    <definition name="login-page" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}page.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}login-header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
        <put-attribute name="profile" value="/WEB-INF/jsp/includes/profile.jsp" />
    </definition>

    <!--
        The main vote page layout
    -->

    <definition name="main-vote" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}vote.jsp">
         <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
    </definition>

    <!--
        TODO: it's ussed??
    --->

    <definition name="setupPage" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}setup.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}/setup/header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
    </definition>

    <!--
        Error page layout, TODO: it's ussed??
    -->

    <definition name="errorPage" templateExpression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}errorPage.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}header-error.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/${detectedDevice ? 'mobile/' : 'standard/'}footer.jsp" />
    </definition>

</tiles-definitions>
