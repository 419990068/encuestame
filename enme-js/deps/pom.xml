<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>org.encuestame</groupId>
		<artifactId>encuestame-js</artifactId>
		<version>1.147-M3-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>deps</artifactId>
	<packaging>war</packaging>
	<name>Encuestame Dependencies JavaScript</name>

	<properties>
		<commonsSourceDir>${project.build.directory}/compress/commons</commonsSourceDir>
		<jsSourceDir>${project.build.directory}/compress/req</jsSourceDir>
		<mobileSourceDir>${project.build.directory}/compress/mobile</mobileSourceDir>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.3.2</version>
				<configuration>
					<force>true</force>
					<statistics>true</statistics>
					<gzip>true</gzip>
					<nosuffix>true</nosuffix>
					<suffix>min</suffix>
					<preserveStringLiterals>false</preserveStringLiterals>
					<preserveAllSemiColons>false</preserveAllSemiColons>
					<failOnWarning>false</failOnWarning>
					<jswarn>false</jswarn>
					<excludes>
						<exclude>${basedir}/src/main/webapp/**</exclude>
					</excludes>
					<outputDirectory>${project.build.directory}/compress</outputDirectory>
				</configuration>
				<executions>
					<execution>
						<id>ie-js</id>
						<goals>
							<goal>compress</goal>
						</goals>
						<configuration>
							<aggregations>
								<aggregation>
									<output>${project.build.directory}/${project.build.finalName}/resource/js/ie.js</output>
									<insertNewLine>true</insertNewLine>
									<includes>
										<include>${mobileSourceDir}/json2/json2.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</execution>
					<execution>
						<id>init-js</id>
						<goals>
							<goal>compress</goal>
						</goals>
						<configuration>
							<aggregations>
								<aggregation>
									<output>${project.build.directory}/${project.build.finalName}/resource/js/init.js</output>
									<insertNewLine>true</insertNewLine>
									<includes>
										<include>${commonsSourceDir}/modernizr.js</include>
										<include>${jsSourceDir}/json_services.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</execution>
					<execution>
						<id>aggregate-js</id>
						<goals>
							<goal>compress</goal>
						</goals>

						<configuration>
							<aggregations>
								<aggregation>
									<output>${project.build.directory}/${project.build.finalName}/resource/js/commons.js</output>
									<insertNewLine>true</insertNewLine>
									<includes>
										<include>${commonsSourceDir}/moment.js</include>
										<include>${commonsSourceDir}/d3.v3.min.js</include>
										<include>${commonsSourceDir}/d3.layout.cloud.js</include>
										<include>${commonsSourceDir}/underscore.js</include>
										<include>${commonsSourceDir}/sockjs.js</include>
										<include>${commonsSourceDir}/stomp.js</include>
										<include>${commonsSourceDir}/offline.min.js</include>
										<include>${commonsSourceDir}/alertify/dist/alertify.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</execution>
					<execution>
						<id>mobile-js</id>
						<goals>
							<goal>compress</goal>
						</goals>

						<configuration>
							<aggregations>
								<aggregation>
									<output>${project.build.directory}/${project.build.finalName}/resource/js/commons-mobile.js</output>
									<insertNewLine>true</insertNewLine>
									<includes>
										<include>${commonsSourceDir}/moment.js</include>
										<include>${commonsSourceDir}/d3.v3.min.js</include>
										<include>${commonsSourceDir}/d3.layout.cloud.js</include>
										<include>${commonsSourceDir}/underscore.js</include>
										<include>${commonsSourceDir}/sockjs.js</include>
										<include>${commonsSourceDir}/stomp.js</include>
										<include>${commonsSourceDir}/offline.min.js</include>
										<include>${commonsSourceDir}/alertify/dist/alertify.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
